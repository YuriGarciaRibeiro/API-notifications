# Application
APP_NAME=NotificationSystem
APP_ENVIRONMENT=Development
APP_PORT=5000

# RabbitMQ
RABBITMQ_HOSTNAME=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUALHOST=/
RABBITMQ_EXCHANGE=notifications.exchange
RABBITMQ_DLX_EXCHANGE=notifications.dlx

# Database (PostgreSQL)
DATABASE_ENABLED=true
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=notifications
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Email Service (SMTP)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_SMTP_FROM=noreply@example.com

# SMS Service (Twilio)
SMS_TWILIO_ACCOUNT_SID=your-account-sid
SMS_TWILIO_AUTH_TOKEN=your-auth-token
SMS_TWILIO_FROM_NUMBER=+1234567890

# Push Notification Service (Firebase)
PUSH_FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
PUSH_FIREBASE_PROJECT_ID=your-project-id

# Security
SECURITY_API_KEY=your-secure-api-key-here
SECURITY_JWT_SECRET=your-jwt-secret-min-32-characters-long
SECURITY_JWT_ISSUER=NotificationSystem
SECURITY_JWT_AUDIENCE=NotificationSystemAPI

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=Information
LOG_FORMAT=json
